<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.collaborator.view.SigninActivity"
    android:background="@color/gray_900"
    android:padding="18dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:src="@drawable/img_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_ilustration_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_delivery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/text_welcome_collaborator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signin_title"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="20sp"
        android:layout_marginTop="-8dp"
        app:layout_constraintTop_toBottomOf="@id/image_ilustration_delivery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/signin_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signin_subtitle"
        android:textColor="@color/gray_400"
        android:fontFamily="@font/poppins"
        android:textSize="14sp"
        android:layout_marginTop="-4dp"
        app:layout_constraintTop_toBottomOf="@id/text_welcome_collaborator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/text_label_cpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_cpf"
        app:layout_constraintTop_toBottomOf="@id/signin_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="28dp"
        android:textSize="13sp"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/edit_cpf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_label_cpf"
        android:hint="@string/cpf_hint"
        android:textColorHint="@color/gray_400"
        android:padding="16dp"
        android:paddingStart="24dp"
        android:textSize="14sp"
        android:textColor="@color/gray_400"
        android:layout_marginTop="4dp"
        android:inputType="number"
        android:maxLength="11"
        android:background="@drawable/sh_border_full"
        android:backgroundTint="@color/gray_800" />

    <TextView
        android:id="@+id/text_label_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_password"
        app:layout_constraintTop_toBottomOf="@id/edit_cpf"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="12dp"
        android:textSize="12sp"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_label_password"
        android:hint="@string/password_hint"
        android:textColorHint="@color/gray_400"
        android:textColor="@color/gray_400"
        android:textSize="14sp"
        android:background="@drawable/sh_border_full"
        android:backgroundTint="@color/gray_800"
        android:layout_marginTop="4dp"
        android:padding="16dp"
        android:paddingStart="24dp"
        android:inputType="numberPassword"
        android:maxLength="6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        app:layout_constraintTop_toBottomOf="@id/edit_password"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/primary"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/button_enter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:padding="9dp"
        android:text="@string/button_enter"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:background="@drawable/sh_border_full"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>