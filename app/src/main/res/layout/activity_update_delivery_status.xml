<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sh_border_sheet"
    android:backgroundTint="@color/gray_900"
    android:padding="18dp"
    tools:context=".view.collaborator.view.UpdateDeliveryStatusActivity">
    
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent" >
       <TextView
           android:id="@+id/label_status_delivery"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/label_field_update_status"
           android:fontFamily="@font/poppins_medium"
           android:layout_marginTop="20dp"
           android:textSize="13sp"
           android:textColor="@color/white"
           android:layout_marginStart="4dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent" />

       <Spinner
           style="@style/Widget.AppCompat.DropDownItem.Spinner"
           android:id="@+id/spinner_status_delivery"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:backgroundTint="@color/gray_800"
           android:background="@drawable/sh_border_full"
           android:layout_marginTop="4dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/label_status_delivery" />

       <TextView
           android:id="@+id/label_password"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/label_password"
           android:fontFamily="@font/poppins_medium"
           android:layout_marginTop="20dp"
           android:textSize="13sp"
           android:textColor="@color/white"
           android:layout_marginStart="4dp"
           app:layout_constraintTop_toBottomOf="@id/spinner_status_delivery"
           app:layout_constraintStart_toStartOf="parent" />

       <EditText
           android:id="@+id/edit_password"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@id/label_password"
           android:textColorHint="@color/gray_400"
           android:padding="16dp"
           android:paddingStart="24dp"
           android:textSize="14sp"
           android:textColor="@color/gray_400"
           android:layout_marginTop="4dp"
           android:inputType="numberPassword"
           android:maxLength="6"
           android:background="@drawable/sh_border_full"
           android:backgroundTint="@color/gray_800" />

       <Button
           android:id="@+id/button_confirm_update"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/sh_border_full"
           android:backgroundTint="@color/primary"
           android:text="@string/button_confirm"
           android:textSize="13sp"
           android:fontFamily="@font/poppins_semibold"
           android:padding="9dp"
           android:textAppearance="@style/TextAppearance.AppCompat.Body2"
           android:textColor="@color/white"
           android:layout_marginTop="24dp"
           app:layout_constraintTop_toBottomOf="@id/edit_password"
           app:layout_constraintEnd_toStartOf="parent" />
   </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>