<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_delivery"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp"
    >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sh_border_default"
        android:backgroundTint="@color/gray_800"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="26sp"
            android:layout_height="26sp"
            android:src="@drawable/ic_box_delivery"
            android:layout_marginEnd="8dp"
            app:tint="@color/green_500" />

        <TextView
            android:id="@+id/code_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notbook Gamer"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/image_icon"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/text_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ibicuitinga-CE"
            android:paddingTop="12dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="13sp"
            android:textColor="@color/gray_300"
            android:layout_below="@id/image_icon" />

        <TextView
            android:id="@+id/text_last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/04/2023 - 10:20h"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:textColor="@color/gray_400"
            android:layout_below="@id/text_location" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>