<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp"
    >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/gray_800"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        >
        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="22sp"
            android:layout_height="22sp"
            android:src="@drawable/ic_baseline_inventory_24"
            android:layout_marginEnd="8dp"
            app:tint="@color/green_500" />

        <TextView
            android:id="@+id/name_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notbook Gamer"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/image_icon"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/text_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ibicuitinga-CE"
            android:paddingTop="12dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="11sp"
            android:textColor="@color/gray_300"
            android:layout_below="@id/image_icon" />

        <TextView
            android:id="@+id/text_last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/04/2023 - 10:20h"
            android:fontFamily="@font/poppins"
            android:textSize="10sp"
            android:textColor="@color/gray_400"
            android:layout_below="@id/text_location" />

        <TextView
            android:id="@+id/text_cod_delevery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="@font/poppins"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/text_last_update"
            android:gravity="end"
            android:layout_alignTop="@id/text_last_update"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>