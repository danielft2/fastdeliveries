<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sh_border_default"
        android:backgroundTint="@color/gray_800"
        android:paddingHorizontal="20dp"
        android:paddingVertical="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="26sp"
            android:layout_height="26sp"
            android:src="@drawable/ic_box_delivery"
            android:layout_marginEnd="8dp"
            app:tint="@color/primary" />

        <TextView
            android:id="@+id/text_last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Objeto em movimento entre as filiais."
            android:paddingTop="12dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="13sp"
            android:textColor="@color/gray_300"
            android:layout_below="@id/image_icon" />

        <TextView
            android:id="@+id/text_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/04/2023 - 10:20h"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:textColor="@color/gray_400"
            android:layout_below="@id/text_last_update" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>